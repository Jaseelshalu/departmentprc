<div class="row">
    <div class="col-md-4 m-auto">
        <div class="container mt-5">
            <h3 class="text-center">Sign up</h3>
            <form action="/dhdcquranadmindashboard/add-user" method="post" enctype="multipart/form-data" class="mt-5">

                {{#if loginErr}}
                {{loginErr}}
                {{/if}}

                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Image</label>
                    <input type="file" id="form2Example1" class="form-control" name="Image" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Name</label>
                    <input type="text" id="form2Example1" class="form-control" name="Name" required />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Age</label>
                    <input type="number" id="form2Example1" class="form-control" name="Age" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Place</label>
                    <input type="text" id="form2Example1" class="form-control" name="Place" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Address</label>
                    <input type="text" id="form2Example1" class="form-control" name="Address" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">District</label>
                    <input type="text" id="form2Example1" class="form-control" name="District" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Email address</label>
                    <input type="email" id="form2Example1" class="form-control" name="Email" required />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example2">DOB</label>
                    <input type="date" id="form2Example2" class="form-control" name="DOB" required />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Phone</label>
                    <input type="number" id="form2Example1" class="form-control" name="Phone" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Institution</label>
                    <input type="text" id="form2Example1" class="form-control" name="Institution" />
                </div>
                <button type="submit" class="btn btn-primary ml-auto">Sign up</button>
            </form>
        </div>
    </div>
</div>