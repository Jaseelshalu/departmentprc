<div class="row">
    <div class="col-md-4 m-auto">
        <div class="container mt-5">
            <h3 class="text-center">Edit</h3>
            <form action="/dhdcquranadmindashboard/edit-user" method="post" class="mt-5" enctype="multipart/form-data">

                {{#if loginErr}}
                {{loginErr}}
                {{/if}}

                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Image</label>
                    <img src="/images/user-images/{{user._id}}.jpg" alt="" style="width: 100px;height: auto;"
                        id="imgView" class="pt-3">
                    <input type="file" name="Image" class="form-control" onchange="viewImage(event)">
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Name</label>
                    <input type="text" id="form2Example1" class="form-control" value="{{user.Name}}" name="Name" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Age</label>
                    <input type="number" id="form2Example1" class="form-control" value="{{user.Age}}" name="Age" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Place</label>
                    <input type="text" id="form2Example1" class="form-control" value="{{user.Place}}" name="Place" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Address</label>
                    <input type="text" id="form2Example1" class="form-control" value="{{user.Address}}" name="Address" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">District</label>
                    <input type="text" id="form2Example1" class="form-control" value="{{user.District}}" name="District" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Email address</label>
                    <input type="email" id="form2Example1" class="form-control" value="{{user.Email}}" name="Email" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example2">DOB</label>
                    <input type="date" id="form2Example2" class="form-control" value="{{user.DOB}}" name="DOB" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Phone</label>
                    <input type="number" id="form2Example1" class="form-control" value="{{user.Phone}}" name="Phone" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Institution</label>
                    <input type="text" id="form2Example1" class="form-control" value="{{user.Institution}}" name="Institution" />
                </div>
                <input type="text" name="Id" class="form-control" value="{{user._id}}" hidden>
                <button type="submit" class="btn btn-primary ml-auto">Edit</button>
            </form>
        </div>
    </div>
</div>
<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>